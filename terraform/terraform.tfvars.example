# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "magic8ball"
environment  = "development"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
allowed_ssh_cidrs    = ["0.0.0.0/0"]  # Change this to your IP range for security

# Instance Configuration
instance_type     = "t3.micro"
db_instance_class = "db.t3.micro"

# Security Configuration
db_password = "your-secure-database-password-here"  # Change this!
public_key  = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... your-public-key-here"  # Add your public key 